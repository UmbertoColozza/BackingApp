    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvStepDescription"
        android:textStyle="bold"
        android:textSize="@dimen/list_recipe_text_size"
        android:textAlignment="center"
        android:layout_margin="@dimen/list_recipe_margin"
        android:background="@drawable/step_selector"
        android:paddingTop="@dimen/list_recipe_padding_top_bot"
        android:paddingBottom="@dimen/list_recipe_padding_top_bot"
        android:paddingLeft="@dimen/list_recipe_padding_left"
        android:paddingRight="@dimen/list_recipe_padding_right"
        />
</LinearLayout>