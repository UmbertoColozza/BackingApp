<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvQuantityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ingredient_text_margin"
        android:layout_marginStart="@dimen/ingredient_text_margin"
        android:layout_marginTop="@dimen/ingredient_text_margin"
        android:textStyle="bold"
        android:text="@string/ingredientQUantityTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuantityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ingredient_text_margin"
        android:layout_marginStart="@dimen/ingredient_text_margin"
        android:layout_marginTop="@dimen/ingredient_text_margin"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/tvQuantityTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIngredientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ingredient_text_margin"
        android:layout_marginStart="@dimen/ingredient_text_margin"
        android:layout_marginTop="@dimen/ingredient_text_margin"
        android:textStyle="bold"
        android:text="@string/ingredientIngredientTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantityTitle" />

    <TextView
        android:id="@+id/tvIngredientValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ingredient_text_margin"
        android:layout_marginStart="@dimen/ingredient_text_margin"
        android:layout_marginTop="@dimen/ingredient_text_margin"
        android:text=""
        android:maxLines="4"
        app:layout_constraintStart_toEndOf="@+id/tvIngredientTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantityValue" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/ingredient_separator_margin"
        android:layout_marginLeft="@dimen/ingredient_separator_margin"
        android:layout_marginRight="@dimen/ingredient_separator_margin"
        android:layout_marginStart="@dimen/ingredient_separator_margin"
        android:layout_marginTop="@dimen/ingredient_separator_margin"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIngredientValue"></View>
</android.support.constraint.ConstraintLayout>